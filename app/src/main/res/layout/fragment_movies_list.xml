<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/RobotoBlack14White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x8"
            android:layout_marginTop="@dimen/x27"
            android:drawablePadding="@dimen/x4"
            android:text="@string/movies_list"
            app:drawableStartCompat="@drawable/ic_combined_shape" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            style="@style/MyCardViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/bg_the_end_move_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x"
                    android:layout_marginTop="@dimen/x"
                    android:layout_marginEnd="@dimen/x"
                    android:layout_marginBottom="@dimen/x24"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/the_end_move_list"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_mask_the_end_move_list"
                    app:layout_constraintBottom_toBottomOf="@id/bg_the_end_move_list"
                    app:layout_constraintEnd_toEndOf="@id/bg_the_end_move_list"
                    app:layout_constraintStart_toStartOf="@id/bg_the_end_move_list"
                    app:layout_constraintTop_toTopOf="@id/bg_the_end_move_list"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/fr_rectangl_13"
                    style="@style/BlackRectangle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x3"
                    android:layout_marginTop="@dimen/x2"
                    android:background="@mipmap/rectangle"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/_13"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="@id/bg_the_end_move_list"
                    app:layout_constraintTop_toTopOf="@id/bg_the_end_move_list" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x4"
                    android:layout_marginEnd="@dimen/x3"
                    app:layout_constraintEnd_toEndOf="@id/bg_the_end_move_list"
                    app:layout_constraintTop_toTopOf="@id/bg_the_end_move_list"
                    app:srcCompat="@drawable/ic_like" />

                <TextView
                    android:id="@+id/fr_tag"
                    style="@style/RobotoPink8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x3"
                    android:layout_marginBottom="@dimen/x11"
                    android:text="@string/action_adventure_drama"
                    app:layout_constraintBottom_toBottomOf="@id/bg_the_end_move_list"
                    app:layout_constraintStart_toStartOf="@id/bg_the_end_move_list" />


                <ru.spb.yakovlev.ratingbarsvg.ui.custom.RatingBarSvg
                    android:id="@+id/fr_ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x4"
                    android:layout_marginBottom="@dimen/x4"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/my_grey"
                    android:progressDrawable="@drawable/ratingbar_svg_selector"
                    android:progressTint="@color/pink"
                    android:rating="4"
                    android:secondaryProgressTint="@color/my_grey"
                    app:drawableHeight="@dimen/x4"
                    app:drawableWidth="@dimen/x4"
                    app:innerPadding="@dimen/one"
                    app:layout_constraintBottom_toBottomOf="@id/bg_the_end_move_list"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fr_tag" />

                <TextView
                    android:id="@+id/fr_text_reviews"
                    style="@style/RobotoBlack8Grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x3"
                    android:layout_marginTop="@dimen/x"
                    android:layout_marginBottom="@dimen/x4"
                    android:text="@string/_125_reviews"
                    app:layout_constraintStart_toEndOf="@id/fr_ratingbar"
                    app:layout_constraintTop_toBottomOf="@id/fr_tag" />

                <TextView
                    style="@style/RobotoBlack14White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x4"
                    android:layout_marginTop="@dimen/x4"
                    android:text="@string/fr_avengers_end_game"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bg_the_end_move_list" />

                <TextView
                    style="@style/RobotoBlack8Grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x4"
                    android:layout_marginBottom="@dimen/x4"
                    android:text="@string/_137_min"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </FrameLayout>
</ScrollView>